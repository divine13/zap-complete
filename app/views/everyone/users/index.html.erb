<div class="users">

	<%= search_form_for [:everyone, @search] do |f| %>
     <div class="search" >
	
		<%= f.label :email_cont, "Type the name of the person you looking for bellow " %>
		<%= f.text_field :email_cont %>

     <div class="actions"><%= f.submit "Search", class: "btn-small btn-primary" %></div>

 </div>
<% end %>
	<ul>
			<% @users.each do |user| %>
		<li>
			<div class="image">
				<%= avatar_for_small(user) %>
			  <%= link_to(user, [:everyone, user]) %> 
			  </div>
		</li>
			<% end %>
	</ul>
</div>