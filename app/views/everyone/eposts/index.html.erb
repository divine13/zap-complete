<div class="users">
<%= provide(:title, "all posts ") %>
<h1>All posts</h1>
  <%= will_paginate(@posts) %>
<h4><%= link_to("post your own new trend", new_everyone_epost_path ) %></h4>
<% @posts.each do |post| %>
      <li>
        <div class="image ">
            <% if post.picture?%>
          <%= link_to(image_tag(post.picture.url(:thumb)),
           everyone_epost_path(post) ) %>
           <% end -%>
        </div>

        <div >
<pre> About this: <%= link_to(post.about, everyone_epost_path(post)) %>
  Posted by:<%= post.user %>
  <h4 class="ft"><%= show_likes_count(post) %> </h4>
</pre>
        </div>
<%# if current_user.admin?  %>
<%# link_to("delete", destroy_post_path(post)) %>
<%# end -%>
      </li>
<% end %>
 <%= will_paginate @posts %>
</div>


