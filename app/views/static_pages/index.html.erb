<% if signed_in? %>
    <%= provide(:title, "home|#{current_user.name}") %>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/user_info' %>
        </section>
          <section>
            <%= render 'everyone/users/stats' %>
          </section>
          <section>
            <%= render 'everyone/users/show_bio' %>
          </section>
      </aside>
      <div class="span8">
        <h3> My posts and followed people`s trends </h3>
        <%= render 'shared/feed' %>
      </div>
    </div>
  <% else  %>
    <%= provide(:title, 'home') %>
    <div class="center hero-unit">
      <h1>Welcome to Zap!</h1>

      <h2>Zap! is a content sharing site aimed at inspiring and
        powering the youth the art that is fashion!</h2>
    </div>
<% end %>